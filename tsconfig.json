{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "lib": ["ES6"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "src/__tests__/tests/board.js"],
  "exclude": ["node_modules"]
}
